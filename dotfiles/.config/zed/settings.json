// documentation: https://zed.dev/docs/configuring-zed
{
  "disable_ai": true,
  "autosave": "off",
  "format_on_save": "off",
  "ui_font_family": "Fira Code",
  "buffer_font_family": "Fira Code",
  "base_keymap": "JetBrains",
  "theme": "Gruvbox Light Hard",
  "vim_mode": true,
  "relative_line_numbers": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": null
  },
  "ui_font_size": 18,
  "buffer_font_size": 24,
  "vim": {
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 0,
    "relative_line_numbers": true,
    "scrollbar": { "show": "never" }
  },
  "gutter": {
    "code_actions": false,
    "runnables": false,
    "folds": false
  },
  "git": {
    "git_gutter": "hide",
    "inline_blame": {
      "enabled": false
    }
  },
  "scrollbar": {
    "show": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "enabled": false,
    "button": false
  },
  "terminal": {
    "button": false
  },
  "buffer_font_features": {
    "calt": false
  }
}
