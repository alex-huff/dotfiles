<?xml version="1.0"?>

<labwc_config>

  <core>
    <gap>12</gap>
  </core>

  <theme>
    <name>gruvbox</name>
    <cornerRadius>0</cornerRadius>
    <font name="Fira Code" size="10" />
  </theme>

  <keyboard>
    <layoutScope>global</layoutScope>
    <repeatRate>35</repeatRate>
    <repeatDelay>250</repeatDelay>
    <keybind key="A-Tab">
      <action name="NextWindow" />
    </keybind>
    <keybind key="A-S-Tab">
      <action name="PreviousWindow" />
    </keybind>
    <keybind key="W-Return">
      <action name="Execute" command="kitty" />
    </keybind>
    <keybind key="W-d">
      <action name="Execute" command="rofi -show drun" />
    </keybind>
    <keybind key="W-S-q">
      <action name="Close" />
    </keybind>
    <keybind key="W-f">
      <action name="ToggleMaximize" />
    </keybind>
    <keybind key="W-S-h">
      <action name="MoveToEdge" direction="left" />
    </keybind>
    <keybind key="W-S-l">
      <action name="MoveToEdge" direction="right" />
    </keybind>
    <keybind key="W-S-k">
      <action name="MoveToEdge" direction="up" />
    </keybind>
    <keybind key="W-S-j">
      <action name="MoveToEdge" direction="down" />
    </keybind>
    <keybind key="W-h">
      <action name="SnapToEdge" direction="left" />
    </keybind>
    <keybind key="W-l">
      <action name="SnapToEdge" direction="right" />
    </keybind>
    <keybind key="W-k">
      <action name="SnapToEdge" direction="up" />
    </keybind>
    <keybind key="W-j">
      <action name="SnapToEdge" direction="down" />
    </keybind>
    <keybind key="W-Space">
      <action name="ShowMenu" menu="client-list-combined-menu" />
      <position>
        <x>center</x>
        <y>center</y>
      </position>
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop" to="1" />
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2" />
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3" />
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop" to="4" />
    </keybind>
    <keybind key="W-5">
      <action name="GoToDesktop" to="5" />
    </keybind>
    <keybind key="W-6">
      <action name="GoToDesktop" to="6" />
    </keybind>
    <keybind key="W-7">
      <action name="GoToDesktop" to="7" />
    </keybind>
    <keybind key="W-8">
      <action name="GoToDesktop" to="8" />
    </keybind>
    <keybind key="W-9">
      <action name="GoToDesktop" to="9" />
    </keybind>
    <keybind key="W-0">
      <action name="GoToDesktop" to="10" />
    </keybind>
    <keybind key="W-A-1">
      <action name="SendToDesktop" to="1" follow="no" />
    </keybind>
    <keybind key="W-A-2">
      <action name="SendToDesktop" to="2" follow="no" />
    </keybind>
    <keybind key="W-A-3">
      <action name="SendToDesktop" to="3" follow="no" />
    </keybind>
    <keybind key="W-A-4">
      <action name="SendToDesktop" to="4" follow="no" />
    </keybind>
    <keybind key="W-A-5">
      <action name="SendToDesktop" to="5" follow="no" />
    </keybind>
    <keybind key="W-A-6">
      <action name="SendToDesktop" to="6" follow="no" />
    </keybind>
    <keybind key="W-A-7">
      <action name="SendToDesktop" to="7" follow="no" />
    </keybind>
    <keybind key="W-A-8">
      <action name="SendToDesktop" to="8" follow="no" />
    </keybind>
    <keybind key="W-A-9">
      <action name="SendToDesktop" to="9" follow="no" />
    </keybind>
    <keybind key="W-A-0">
      <action name="SendToDesktop" to="10" follow="no" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>
    </context>
  </mouse>

  <libinput>
    <device category="default">
      <naturalScroll>yes</naturalScroll>
      <pointerSpeed>0</pointerSpeed>
      <accelProfile>flat</accelProfile>
    </device>
  </libinput>

  <desktops number="10" popupTime="0" prefix="workspace" />

</labwc_config>
