#!/bin/sh

"$VIM_EXECUTABLE_PATH" "$@" &
vim_pid=$!
old_foreground=$(color-manager get foreground)
old_background=$(color-manager get background)
color-manager set foreground --by-name dfg1
color-manager set background --by-name black
wait $vim_pid
color-manager set foreground --by-spec "$old_foreground"
color-manager set background --by-spec "$old_background"
